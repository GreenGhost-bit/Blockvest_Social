{
  "name": "blockvest-backend",
  "version": "1.0.0",
  "description": "Backend for Blockvest Social - A decentralized social investment platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "echo 'No build step needed for Node.js'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "setup": "node scripts/setup.js",
    "setup:db": "node scripts/setup.js",
    "deploy:contracts": "node scripts/deploy-contracts.js",
    "cleanup:mfa": "node scripts/cleanup-mfa.js",
    "reassess:risk": "node scripts/scheduled-risk-reassessment.js",
    "generate:risk-report": "node scripts/generate-risk-report.js",
    "health-check": "curl -f http://localhost:5000/health || exit 1",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "check": "npm run lint && npm run test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "logs": "tail -f logs/app.log",
    "monitor": "pm2 monit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "algosdk": "^2.7.0",
    "multer": "^1.4.5",
    "axios": "^1.5.0",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "joi": "^17.9.2",
    "express-validator": "^7.0.1",
    "socket.io": "^4.7.2",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "nodemailer": "^6.9.4",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "eslint-config-node": "^4.1.0"
  },
  "keywords": [
    "blockchain",
    "algorand",
    "social-investment",
    "web3",
    "defi",
    "microfinance"
  ],
  "author": "Blockvest Social Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}