# Server Configuration
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/blockvest_social
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/blockvest_social

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Algorand Configuration
ALGOD_TOKEN=your-algod-token
ALGOD_SERVER=https://testnet-api.algonode.cloud
ALGOD_PORT=443
INDEXER_TOKEN=your-indexer-token
INDEXER_SERVER=https://testnet-idx.algonode.cloud
INDEXER_PORT=443

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@blockvestsocial.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=blockvest-social-uploads

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe Configuration (for fiat payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Blockchain Network Configuration
NETWORK=testnet
# NETWORK=mainnet

# Smart Contract Configuration
CONTRACT_APP_ID=your-contract-app-id
CONTRACT_CREATOR_ADDRESS=your-contract-creator-address

# Notification Configuration
PUSH_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false

# Risk Assessment Configuration
RISK_ASSESSMENT_ENABLED=true
MIN_RISK_SCORE=0
MAX_RISK_SCORE=100
DEFAULT_RISK_SCORE=50

# Investment Configuration
MIN_INVESTMENT_AMOUNT=0.001
MAX_INVESTMENT_AMOUNT=1000
MIN_INTEREST_RATE=0
MAX_INTEREST_RATE=100
MIN_DURATION_DAYS=1
MAX_DURATION_DAYS=365

# Verification Configuration
VERIFICATION_REQUIRED=true
DOCUMENT_VERIFICATION_ENABLED=true
KYC_REQUIRED=false

# Social Features Configuration
COMMENTS_ENABLED=true
LIKES_ENABLED=true
SHARING_ENABLED=true
REPUTATION_SYSTEM_ENABLED=true

# Development Configuration
DEBUG=true
LOG_REQUESTS=true
ENABLE_SWAGGER=true
SWAGGER_URL=/api-docs

# Testing Configuration
TEST_DATABASE_URI=mongodb://localhost:27017/blockvest_social_test
JEST_TIMEOUT=10000

# Production Configuration
COMPRESSION_ENABLED=true
HELMET_ENABLED=true
RATE_LIMITING_ENABLED=true
CORS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Configuration
CACHE_TTL=3600
QUERY_TIMEOUT=30000
CONNECTION_POOL_SIZE=10

# Security Headers
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block 