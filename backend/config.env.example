# Database Configuration
MONGODB_URI=mongodb://localhost:27017/blockvest_social
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/blockvest_social

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Algorand Configuration
ALGOD_TOKEN=your-algod-token
ALGOD_SERVER=https://testnet-api.algonode.cloud
INDEXER_TOKEN=your-indexer-token
INDEXER_SERVER=https://testnet-idx.algonode.cloud
ALGORAND_NETWORK=testnet

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@blockvest.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
COOKIE_SECRET=your-cookie-secret

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Blockchain Configuration
CONTRACT_ADDRESS=your-smart-contract-address
WALLET_MNEMONIC=your-wallet-mnemonic-phrase
GAS_LIMIT=3000000
GAS_PRICE=20000000000

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_API_KEY=your-analytics-api-key
ANALYTICS_PROJECT_ID=your-project-id

# Notification Configuration
PUSH_NOTIFICATIONS_ENABLED=true
FCM_SERVER_KEY=your-firebase-server-key
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=your-pusher-cluster

# Risk Assessment Configuration
RISK_ASSESSMENT_ENABLED=true
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_MEDIUM=0.5
RISK_THRESHOLD_LOW=0.2

# Governance Configuration
GOVERNANCE_ENABLED=true
PROPOSAL_MINIMUM_STAKE=1000
VOTING_PERIOD_DAYS=7

# Social Features Configuration
SOCIAL_FEATURES_ENABLED=true
MAX_POST_LENGTH=1000
MAX_COMMENT_LENGTH=500
PROFANITY_FILTER_ENABLED=true

# Investment Configuration
MIN_INVESTMENT_AMOUNT=10
MAX_INVESTMENT_AMOUNT=100000
INVESTMENT_FEE_PERCENTAGE=2.5

# Testing Configuration
TEST_MONGODB_URI=mongodb://localhost:27017/blockvest_social_test
TEST_JWT_SECRET=test-jwt-secret
TEST_ALGOD_TOKEN=test-algod-token 